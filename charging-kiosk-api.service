[Unit]
Description=Charging Kiosk Python API
After=network.target

[Service]
Type=simple
User=solaradmin
WorkingDirectory=/home/solaradmin/charging-kiosk
ExecStart=/usr/bin/python3 /home/solaradmin/charging-kiosk/app.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=charging-kiosk-api

# Environment variables (if needed)
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target

